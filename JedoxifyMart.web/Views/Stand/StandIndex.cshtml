@model IEnumerable<JedoxifyMart.web.Models.StandDto>

<form method="post">
    <div class="container row">

        @foreach (var stand in Model)
        {
            <div class="col-4 ">
                <div class="p-0 my-3 border">
                    <div class="card">

                        <div class="card-body">
                            <h3 class="card-title text-success">@stand.StandId </h3>

                            <div class="col">
                                <div class="row pt-1">
                                    <span style="font-size:23px;">Stand Name: @stand.StandName</span>
                                </div>
                                                <div class="card-body">
                    <div class=" d-none d-lg-block">
                        <div class="row text-info">
                            <div class="col-lg-3">
                                Product Details
                            </div>
                            <div class="col-lg-2">
                               Product Name
                            </div>
                            <div class="col-lg-1">
                                Price
                            </div>
                        </div>
                    </div>

                    <hr />
                    @foreach (var standObj in Model)
                    {
                        <div class="row h-100">
                            <div class="col-5 col-md-3">
                                <h5>@standObj.StandDetails</h5>
                            </div>
                           
                          
                           
                        </div>
                        <hr />
                    }
                 
                </div>
                             
      

                                <div class="card-footer row bg-dark">
                                    <div class="col-12 col-md-6 pb-1 ">
                                        <a class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Go to Stand</a>
                                    </div>
                                  
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</form>
@section Scripts{
<partial name="_ValidationScriptsPartial" />
}